# ── Application ─────────────────────────────────────────────
APP_ENV=dev
LOG_LEVEL=INFO

# ── OIDC (outgoing client-credentials + incoming JWT) ──────
OIDC_TOKEN_BASE_URL=http://keycloak.celine.localhost/realms/celine
OIDC_CLIENT_ID=celine-dt
OIDC_CLIENT_SECRET=celine-dt
OIDC_CLIENT_SCOPE=dataset.query
OIDC_VERIFY_JWT=false
OIDC_JWKS_URI=

# ── MQTT Broker ────────────────────────────────────────────
MQTT_HOST=172.17.0.1
MQTT_PORT=1883
MQTT_TOPIC_PREFIX=celine/dt/
MQTT_USE_TLS=false
# Static credentials (ignored when OIDC is configured):
# MQTT_USERNAME=
# MQTT_PASSWORD=

# ── Dataset API ────────────────────────────────────────────
DATASET_API_URL=http://localhost:8001

# ── Config file paths (override defaults) ──────────────────
# DOMAINS_CONFIG_PATHS=["config/domains.yaml"]
# CLIENTS_CONFIG_PATHS=["config/clients.yaml"]
# BROKERS_CONFIG_PATHS=["config/brokers.yaml"]

# ── Simulation workspaces ──────────────────────────────────
# DT_WORKSPACE_ROOT=dt_workspaces